<div class="viewAct">
    <H1 class="title">Activities</H1>
    <div class="tile is-ancestor activity-card">
        {{#each user}}
        <article class="tile is-child">
            <p class="title">{{name}}'s Activity</p>
            {{#each activities}}
            <p class="subtitle">Date:{{date}}</p>
            <div class="content">
                <ul>
                    <li>Activity Description: {{activityDes}}</li>
                    <li>Rigor: {{rigor}}</li>
                    <li>Mileage: {{mileage}}</li>
                    <li>Duration: {{duration}}</li>
                </ul>
            </div>
            {{/each}}
        </article>
        {{/each}}
    </div>
</div>